pipeline {
    agent any
    tools { 
        maven 'maven3.6.3' 
        jdk 'jdk' 
    }
	
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }
	
		stage ('static code analysis') {
           steps {
                sh 'mvn -B validate' 
            }
	}
}